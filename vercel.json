{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node",
        "config": { "includeFiles": ["public/**"] }
      },
      {
        "src": "**/*.njk",
        "use": "@vercel/static"
      }
    ],
    "routes": [
        {
          "src": "/(.*)",
          "dest": "index.js"
        }
      ]
  }